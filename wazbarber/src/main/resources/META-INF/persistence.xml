        <jta-data-source>java:app/persistencia</jta-data-source>
        <class>br.edu.ifpb.wazbarber.model.Administrador</class>
        <class>br.edu.ifpb.wazbarber.model.Agendamento</class>
        <class>br.edu.ifpb.wazbarber.model.Atendente</class>
        <class>br.edu.ifpb.wazbarber.model.Cliente</class>
        <class>br.edu.ifpb.wazbarber.model.DuracaoDoServico</class>
        <class>br.edu.ifpb.wazbarber.model.HorarioAtendimento</class>
        <class>br.edu.ifpb.wazbarber.model.Pesquisa</class>
        <class>br.edu.ifpb.wazbarber.model.Servico</class>
        <class>br.edu.ifpb.wazbarber.util.LocalDateConverter</class>
        <class>br.edu.ifpb.wazbarber.util.LocalDateTimeConverter</class>
        <class>br.edu.ifpb.wazbarber.util.LocalTimeConverter</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="javax.persistence.schema-generation.database.action" value="create"/>
        </properties>
    </persistence-unit>
</persistence>
